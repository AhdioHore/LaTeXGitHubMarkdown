{
  "manifest_version": 2,

  "name": "LaTeX GitHub Markdown",
  "description": "Show LaTeX formulas for GitHub Markdown files.",
  "version": "0.0.8",

  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "https://github.com/",
    "https://gist.github.com/"
  ],
  "background": {
    "scripts": ["inject.js"]
  }
}
