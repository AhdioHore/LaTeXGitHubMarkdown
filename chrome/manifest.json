{
  "manifest_version": 2,

  "name": "LaTeX GitHub Markdown",
  "description": "Show LaTeX formulas while browsering GitHub Markdown files.",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "storage",
    "webNavigation",
    "https://github.com/",
    "https://gist.github.com/"
  ],
  "content_security_policy": "script-src 'self' https://cdn.mathjax.org; object-src 'self'",
  "background": {
    "scripts": [
      "inject.js"
    ]
  }
}
